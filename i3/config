    inactive_workspace #333333 #222222 #888888
    urgent_workspace   #2F343A #900000 #FFFFFF
    binding_mode       #2F343A #900000 #FFFFFF
  }
}

## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (R) Right Side, (L) Left Side, (I) Identical (O) OFF
mode "$mode_display" {
    bindsym r exec --no-startup-id xrandr --output eDP1 --auto --output HDMI2 --auto --right-of eDP1, mode "default"
    bindsym l exec --no-startup-id xrandr --output eDP1 --auto --output HDMI2 --auto --left-of eDP1, mode "default"
    bindsym i exec --no-startup-id xrandr --output eDP1 --auto --output HDMI2 --auto --same-as eDP1, mode "default"
    bindsym o exec --no-startup-id xrandr --output HDMI2 --auto --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"

